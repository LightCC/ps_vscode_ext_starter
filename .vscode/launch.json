// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run StaticSiteHero Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/static-site-hero"
			]
		},
		{
			"name": "Test StaticSiteHero Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/static-site-hero",
				"--extensionTestsPath=${workspaceFolder}/static-site-hero/test/suite/index"
			]
		},
		{
			"name": "Run HelloWorld Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/hello-world"
			]
		},
		{
			"name": "Test HelloWorld Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/hello-world",
				"--extensionTestsPath=${workspaceFolder}/hello-world/test/suite/index"
			]
		}

	]
}
